{
  "name": "react-menubar",
  "version": "0.0.1",
  "description": "A Skeleton Menu Bar App in React",
  "main": "./dist/main.js",
  "license": "MIT",
  "private": false,
  "author": "Alex Torres <aletormat@gmail.com>",
  "scripts": {
    
    "dev": "parcel build main.js --target=electron && parcel build src/index.js --target=node && yarn watch",
    "start:electron": "electron .",
    "watch:electron": "parcel watch main.js --target=electron",
    "watch:react": "parcel watch src/index.js --target=node",
    "watch": "ENVIRONMENT=develop concurrently \"yarn watch:electron\" \"yarn watch:react\" \"yarn start:electron\""
  },
  "dependencies": {
    "auto-launch": "^5.0.5",
    "concurrently": "^3.5.1",
    "dotenv": "^5.0.1",
    "electron-reload": "^1.2.2",
    "menubar": "^5.2.3",
    "styled-components": "^3.3.2"
  },
  "devDependencies": {
    "babel-preset-react": "^6.24.1",
    "electron": "^1.8.3",
    "electron-devtools-installer": "^2.2.4",
    "parcel-bundler": "^1.6.2",
    "prettier": "^1.11.1",
    "react": "^16.2.0",
    "react-dom": "^16.2.0"
  }
}
